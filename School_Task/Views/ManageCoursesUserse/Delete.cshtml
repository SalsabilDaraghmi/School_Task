@model School_Task.ViewModels.Users

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this @Model.Role from @ViewBag.course.CourseName course ?
    </h3>
<div>
  
    <hr />
    <dl class="dl-horizontal">
     
        <dt>
            @Html.DisplayName("Name: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>

  
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "ShowUserse", new { id = ViewBag.course.Id, role = Model.Role })
        </div>
    }
</div>
