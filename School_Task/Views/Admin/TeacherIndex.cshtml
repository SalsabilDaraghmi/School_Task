
@model IEnumerable<School_Task.ViewModels.Users>
@{
    ViewBag.Title = "Teacher Index";
}

<h1>Teacher Manager</h1>

<p>
    @Html.ActionLink("Create New", "Create", new { Role = "Teacher" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("First Name")
        </th>
        <th>
            @Html.DisplayName("Last Name")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("age")
        </th>

    </tr>

    @foreach (var item in Model)
    {
        if (item.Role == "Teacher")
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.age)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id, role = "Teacher" }) |
                    @* @Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }

</table>
@Html.ActionLink("Back to List", "AdminIndex", "School")